                    Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)"
                    From="#954024" To="#00000000" Duration="0:0:3" />
            </Storyboard>
        </BeginStoryboard>
    </EventTrigger>
</StackPanel.Triggers>

